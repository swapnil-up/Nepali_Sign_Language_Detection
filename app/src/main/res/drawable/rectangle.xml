<!-- res/drawable/rounded_rectangle.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FDF9F9"/> <!-- Color of the rectangle -->

    <size
        android:width="100dp"
        android:height="100dp"/> <!-- Size of the rectangle -->

    <stroke
        android:width="2dp"
        android:color="#000000"/> <!-- Optional: border width and color -->

    <corners android:radius="4dp"/> <!-- Radius for the corners -->
</shape>
